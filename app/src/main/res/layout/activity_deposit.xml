<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.DepositActivity"
    android:orientation="vertical"
    android:background="@color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <ImageButton
            android:id="@+id/imageButton"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:background="@color/white"
            android:src="@drawable/icon_arrow"
            android:onClick="back"/>

        <ImageButton
            android:id="@+id/imageButton2"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:background="@color/white"
            android:src="@drawable/icon_points" />

        <TextView
            android:id="@+id/titleRecycler"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="100dp"
            android:layout_marginTop="10dp"
            android:text="@string/deposit"
            android:textSize="30sp"
            android:textColor="@color/black"
            android:textAlignment="center"
            android:gravity="center_horizontal" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <EditText
            android:id="@+id/txtCard"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="60dp"
            android:layout_marginHorizontal="50dp"
            android:textSize="20sp"
            android:hint="@string/number_count"
            android:textColor="@color/textGray"
            android:textColorHint="@color/textHint"
            android:inputType="number"
            android:maxLength="16"
            android:background="@drawable/input_light"
            android:paddingLeft="20dp"/>

        <EditText
            android:id="@+id/txtName"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="30dp"
            android:layout_marginHorizontal="50dp"
            android:textSize="20sp"
            android:hint="@string/full_name"
            android:textColor="@color/textGray"
            android:textColorHint="@color/textHint"
            android:inputType="text"
            android:background="@drawable/input_light"
            android:paddingLeft="20dp"/>

        <EditText
            android:id="@+id/txtValue"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="30dp"
            android:layout_marginHorizontal="50dp"
            android:textSize="20sp"
            android:hint="@string/value_deposit"
            android:textColor="@color/textGray"
            android:textColorHint="@color/textHint"
            android:inputType="number"
            android:maxLength="5"
            android:background="@drawable/input_light"
            android:paddingLeft="20dp"/>

        <TextView
            android:id="@+id/company"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="30dp"
            android:layout_marginHorizontal="50dp"
            android:textSize="15sp"
            android:textColor="@color/textGray"
            android:textColorHint="@color/textHint"
            android:paddingLeft="20dp"/>

        <Button
            android:id="@+id/btnDeposit"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="30dp"
            android:layout_marginHorizontal="50dp"
            android:textSize="20sp"
            android:text="@string/to_deposit"
            android:textColor="@color/white"
            android:background="@drawable/button_dark"
            android:onClick="deposit"/>

    </LinearLayout>

</LinearLayout>